    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Cognivibe",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "theme": "Dark"
      }
