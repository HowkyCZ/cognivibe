{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cognivibe",
  "version": "0.1.0",
  "identifier": "com.cognivibe.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "cognivibe",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Cognivibe team"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["cognivibe"]
      }
    }
  }

}
