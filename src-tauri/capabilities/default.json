{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "windows": ["main"],
  "platforms": ["macOS", "windows", "linux"],
  "permissions": [
    "core:default",
    "core:event:default",
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "https://cognivibe.tech/*"
        }
      ]
    },
    "deep-link:default",
    "autostart:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://cognivibe-server.vercel.app"
        },
        {
          "url": "https://server.cognivibe.tech"
        },
        {
          "url": "http://localhost:3000"
        }
      ]
    },
    "updater:default",
    "process:default",
    "macos-permissions:default",
    "os:default",
    "notification:default"
  ]
}
